<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="18dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:gravity="center">

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#3399CC"
            android:gravity="center" />

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:src="@drawable/fchb" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_placename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:text="Large Text"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/slightfadedblack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewSubtypeTag"
            android:layout_marginStart="149dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/textViewSubtypeTag"
            android:layout_toRightOf="@+id/textViewSubtypeTag"
            android:text="TextView"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/textViewSubtypeTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_placename"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="area"
            android:textAllCaps="true"
            android:textColor="@color/colortag"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textViewDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewSubtypeTag"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            android:textSize="10sp" />
    </RelativeLayout>


</LinearLayout>




